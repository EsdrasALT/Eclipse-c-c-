//QUESTÃO 3

// pow(variável, expoente)

//Logica
void iterativo(int numero){

	int numerador=0;
	int denominador=0;

	for (int i=1;i<numero+1;i++){
	numerador=pow(i,3);
	denominador=pow(10,i);
	printf("%d° - %d/%d\n",i,numerador,denominador);
	}
}

//Chat
void calcularSerie(int numero) {
    double soma = 0.0;

    for (int i = 1; i <= numero; ++i) {
        soma += pow(i, 3) / pow(10, i - 1);
    }
    printf("O resultado da série com %d termos é: %f\n", numero, soma);
}
