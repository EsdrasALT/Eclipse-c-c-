#include <stdio.h>

struct st_pessoa{
		char nome[100];
		int idade;
		char endereco[100];
};

int main(){
	setbuf(stdout,NULL);

	struct st_pessoa Pessoa[2]

	for(int i=0; i<2; i++){
			printf("Informe o seu nome: ");
			fgets(Pessoa.nome[i], 100, stdin);

			printf("Informe a sua idade: ");
			scanf("%d", &Pessoa.idade);

			printf("Informe o seu endereço: ");
			fgets(Pessoa.endereco[i], 100, stdin);
		}

	printf("==================Pessoas Listadas====================\n");
		for(int i=0; i<1; i++){
			printf("==================Pessoa %d====================\n", (i+1));
			printf("Nome: %s\n", strtok(Pessoa.nome[i], "\n"));
			printf("Idade: %d\n", Pessoa.idade);
			printf("Endereço: %s\n", strtok(Pessoa.endereco[i], "\n"));
		}


	return 0;
}

