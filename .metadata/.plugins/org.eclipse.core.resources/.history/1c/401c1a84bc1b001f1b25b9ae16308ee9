void menuPrincipal() {
    char escolha;
    do {
        printf("Menu Principal:\n");
        printf("A - Inserir (cliente e placa)\n");
        printf("B - Excluir (cliente e placa)\n");
        printf("C - Relatórios\n");
        printf("D - Finalizar\n");
        printf("Escolha uma opção: ");
        scanf(" %c", &escolha);

        switch (escolha) {
            case 'A':
                printf("Caminho: Menu Principal -> A\n");
                menuInserir();
                break;
            case 'B':
                printf("Caminho: Menu Principal -> B\n");
                menuExcluir();
                break;
            case 'C':
                printf("Caminho: Menu Principal -> C\n");
                menuRelatorios();
                break;
            case 'D':
                printf("Caminho: Menu Principal -> D\n");
                printf("Finalizando o programa... (Responsável: João)\n");
                break;
            default:
                printf("Opção inválida! Tente novamente.\n");
        }
    } while (escolha != 'D');
}

void menuInserir() {
    int escolha;
    printf("Submenu Inserir:\n");
    printf("1 - Inserção de cliente\n");
    printf("2 - Inserção de placa\n");
    printf("Escolha uma opção: ");
    scanf("%d", &escolha);

    switch (escolha) {
        case 1:
            printf("Caminho: Menu Principal -> A -> 1\n");
            printf("Inserção de cliente... (Responsável: Maria)\n");
            break;
        case 2:
            printf("Caminho: Menu Principal -> A -> 2\n");
            printf("Inserção de placa... (Responsável: Pedro)\n");
            break;
        default:
            printf("Opção inválida! Tente novamente.\n");
    }
}

void menuExcluir() {
    int escolha;
    printf("Submenu Excluir:\n");
    printf("1 - Exclusão de cliente\n");
    printf("2 - Exclusão de placa\n");
    printf("Escolha uma opção: ");
    scanf("%d", &escolha);

    switch (escolha) {
        case 1:
            printf("Caminho: Menu Principal -> B -> 1\n");
            printf("Exclusão de cliente... (Responsável: Ana)\n");
            break;
        case 2:
            printf("Caminho: Menu Principal -> B -> 2\n");
            printf("Exclusão de placa... (Responsável: Carlos)\n");
            break;
        default:
            printf("Opção inválida! Tente novamente.\n");
    }
}

void menuRelatorios() {
    int escolha;
    printf("Submenu Relatórios:\n");
    printf("1 - Listar todos os clientes cadastrados (e seus carros)\n");
    printf("2 - Listar dados do cliente por código (dados e carros)\n");
    printf("3 - Listar clientes por tipo de contrato\n");
    printf("Escolha uma opção: ");
    scanf("%d", &escolha);

    switch (escolha) {
        case 1:
            printf("Caminho: Menu Principal -> C -> 1\n");
            printf("Listando todos os clientes... (Responsável: Bruno)\n");
            break;
        case 2:
            printf("Caminho: Menu Principal -> C -> 2\n");
            printf("Listando dados do cliente por código... (Responsável: Daniela)\n");
            break;
        case 3:
            printf("Caminho: Menu Principal -> C -> 3\n");
            printf("Listando clientes por tipo de contrato... (Responsável: Eduardo)\n");
            break;
        default:
            printf("Opção inválida! Tente novamente.\n");
    }
}
