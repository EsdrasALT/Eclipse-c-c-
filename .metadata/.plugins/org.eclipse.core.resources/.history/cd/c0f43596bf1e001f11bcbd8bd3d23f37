char solicitarDataNascimento(){
	char data[11];

	printf("Digite sua data de nascimento:");
	scanf(" %c" ,&data);

	for (int i=0;i<11;i++){
		printf("%c",data);
	}

	return data;
}

DataNascimento converterData(char *data_str) {
    DataNascimento data;
    sscanf(data_str, "%d/%d/%d", &data.dia, &data.mes, &data.ano); //Verifica se a string tem o formato correto (dd/mm/yyyy)
    return data;
}

