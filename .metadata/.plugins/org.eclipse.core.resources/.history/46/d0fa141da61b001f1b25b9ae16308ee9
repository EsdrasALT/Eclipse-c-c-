//QUESTÃO 3

// pow(variável, expoente)

void calcularSerieIterativo(int numero) {
    double soma = 0.0;

    for (int i = 1; i <= numero; ++i) {
    	soma += pow(i, 3) / pow(10, i - 1);
    	printf("%d° - %2.lf/%2.lf\n",i,pow(i,3),pow(10,i-1));
    }
    printf("O resultado da série com %d termos é: %f\n", numero, soma);
}

double calcularSerieRecursividade(int numero){
	double soma=0.0;

	if (numero > 0){
		return soma;
	} else{
	double resultado;
	soma = pow(numero-1, 3) / pow(10, numero - 1);
	return resultado + soma;
	}
}

int recursivaComum(int numero, int multiplicador){
	if (multiplicador > 0){
		return numero + recursivaComum(numero, multiplicador-1);
	}
	return 0;
}
