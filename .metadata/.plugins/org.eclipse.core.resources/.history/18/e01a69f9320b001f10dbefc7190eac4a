#include <stdio.h>

struct st_pessoa {
		char nome[100];
		int idade;
		struct Endereço endereço[100];
}Pessoa;

struct st_endereço {
		char rua[100];
		int numero;
		int cep;
}Endereco;


int main(){
	setbuf(stdout,NULL);

	for(int i=0; i<2; i++){
			printf("Informe o seu nome: ");
			fgets(Pessoa.nome[i], 100, stdin);

			printf("Informe a sua idade: ");
			scanf("%d", &Pessoa.idade);
			getchar();

			printf("Informe o telefone do contato: ");
			fgets(agenda.contatos[i].telefone, 20, stdin);

			printf("Informe o email do contato: ");
			fgets(agenda.contatos[i].email, 100, stdin);
		}



	return 0;
}

